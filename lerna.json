{
  "lerna": "2.11.0",
  "npmClient": "yarn",
  "command": {
    "publish": {
      "message": "chore(release): publish %s",
      "conventionalCommits": true
    }
  },
  "packages": ["packages/*"],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "version": "independent",
  "useWorkspaces": true
}
